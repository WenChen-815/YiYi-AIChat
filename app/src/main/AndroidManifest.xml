<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 图片选择权限 - Android 13及以上版本 -->
    <uses-permission
        android:name="android.permission.READ_MEDIA_IMAGES"
        android:maxSdkVersion="34" /> <!-- 图片选择权限 - Android 12及以下版本 -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/yiyi_label"
        android:label="@string/app_name"
        android:roundIcon="@drawable/yiyi_round_128"
        android:supportsRtl="true"
        android:theme="@style/Theme.AIChat"
        tools:targetApi="31">
        <activity
            android:name=".ui.activity.TextTestActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.ImgTestActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.AIChat"
            android:windowSoftInputMode="adjustPan|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.ConfigActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.CharacterEditActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.ChatActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan|stateHidden"/>
        <activity
            android:name=".ui.activity.ComposeTestActivity"
            android:exported="false" />
    </application>

</manifest>