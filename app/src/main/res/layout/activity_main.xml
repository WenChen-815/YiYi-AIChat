<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <!-- 主内容区域 -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/customBottomNav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!-- 底部导航栏 -->

    <!-- 自定义底部导航栏 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/customBottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 首页导航项 -->
        <TextView
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="首页"
            android:textColor="@color/bottom_nav_color_selector"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/navSearch"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 搜索导航项 -->
        <TextView
            android:id="@+id/navSearch"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="搜索"
            android:textColor="@color/bottom_nav_color_selector"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/navAdd"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/navHome"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 中间发布按钮（固定大小） -->
        <ImageView
            android:id="@+id/navAdd"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/add_button_background"
            android:contentDescription="新增角色"
            android:layout_marginVertical="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/navMessage"
            app:layout_constraintStart_toEndOf="@id/navSearch"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBaseline_toBottomOf="parent" />

        <!-- 消息导航项 -->
        <TextView
            android:id="@+id/navMessage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="消息"
            android:textColor="@color/bottom_nav_color_selector"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/navMine"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/navAdd"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 我的导航项 -->
        <TextView
            android:id="@+id/navMine"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="我的"
            android:textColor="@color/bottom_nav_color_selector"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/navMessage"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
